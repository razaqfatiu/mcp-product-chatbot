# OpenRouter / OpenAI configuration
# OPENAI_API_KEY is your OpenRouter API key.
OPENAI_API_KEY=sk-or-...

# Point the OpenAI client at OpenRouter.
OPENAI_BASE_URL=https://openrouter.ai/api/v1

# Primary / secondary models used by the orchestrator.
OPENROUTER_PRIMARY_MODEL=openai/gpt-4.1-mini
OPENROUTER_SECONDARY_MODEL=openai/gpt-4o

# Langfuse observability (optional but recommended)
LANGFUSE_SECRET_KEY=your-langfuse-secret-key
LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
LANGFUSE_BASE_URL=https://cloud.langfuse.com

# Product listing limits
# Maximum number of products to include from list/search tools.
PRODUCT_LIST_MAX_ITEMS=20
